<h2 class="mb-4">Lost cats</h2>

<%= link_to 'I found a kitty!', cats_new_path, class: 'btn btn-primary mb-3' %>

<% @cats.each do |cat| %>
  <%= link_to cat_path(cat) do %>
    <div class="card p-2 mt-2 d-flex flex-row">
      <h5>
        <%= cat.color %> cat @ <%= cat.location %>

        <% if cat.adopted? %>
          <span class="badge text-bg-success">Adopted ðŸ˜»</span>
        <% end %>
      </h5>

      <div class="d-flex ms-auto gap-2">
        <%= link_to edit_cat_path(cat) do %>
          <i class="fa-solid fa-pencil"></i>
        <% end %>

        <%= link_to delete_cat_path(cat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash text-danger"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
