<%= form_with model: cat do |f| %>
  <div class="mt-2">
    <%= f.label :color, class: 'form-label' %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>

   <div class="mt-2">
    <%= f.label :location, class: 'form-label' %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>

   <div class="mt-2">
    <%= f.label :legs, class: 'form-label' %>
    <%= f.number_field :legs, class: 'form-control' %>
  </div>

   <div class="mt-2">
    <%= f.label :age, class: 'form-label' %>
    <%= f.number_field :age, class: 'form-control' %>
  </div>

  <% if cat.persisted? %>
    <div class="mt-2">
      <div class="form-check">
        <%= f.check_box :adopted, class: 'form-check-input' %>
        <%= f.label :adopted, class: 'form-check-label' %>
      </div>
    </div>
  <% end %>

  <div class="mt-3 mb-3">
    <%= f.submit 'Finish!', class: 'btn btn-primary' %>
  </div>
<% end %>
